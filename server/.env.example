# Environment mode (development, production, etc.)
NODE_ENV=development

# Server port
PORT=8800

# Secret key for JWT token signing (replace with your own secret)
JWT_SECRET=your_jwt_secret_here

# Database connection URL
DATABASE_URL=your_database_url_here

# Domain for setting cookies (e.g., localhost, yourdomain.com)
COOKIE_DOMAIN=localhost

# Allowed origins for CORS, comma-separated
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8800

# Base URL of your backend server
BASE_URL=http://localhost:8800

# Mailtrap SMTP configuration for email testing
MAILTRAP_HOST=sandbox.smtp.mailtrap.io
MAILTRAP_PORT=2525
MAILTRAP_USER=your_mailtrap_username_here
MAILTRAP_PASS=your_mailtrap_password_here
